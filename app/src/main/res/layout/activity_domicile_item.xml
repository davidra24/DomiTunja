<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    tools:context=".itemList.ItemDomicileLayout">

    <ImageButton
        android:id="@+id/btnViewDomicile"
        android:layout_width="@dimen/imageButtonWidthItem"
        android:layout_height="@dimen/imageButtonHeightItem"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:contentDescription="@string/button_view_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_arrow" />

    <ImageView
        android:id="@+id/imageDomicile"
        android:layout_width="130dp"
        android:layout_height="@dimen/imageItemHeight"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:contentDescription="@string/img_item_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtTitleDomicile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/name_rest_item"
        android:text="@android:string/untitled"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageDomicile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescripDomicile"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/desc_rest_item"
        android:text="@android:string/untitled"
        android:textAlignment="viewStart"
        android:layout_gravity="start"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/btnViewDomicile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageDomicile"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleDomicile" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBarDomicile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srb_starSize="22dp"
        app:srb_starBorderWidth="1"
        app:srb_numberOfStars="5"
        app:srb_stepSize="1.5"
        app:srb_borderColor="@color/colorStar"
        app:srb_fillColor="@color/colorStar"
        app:srb_starsSeparation="10dp"
        app:srb_isIndicator="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/imageDomicile"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripDomicile"/>

</android.support.constraint.ConstraintLayout>
