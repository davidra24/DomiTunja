<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dmt.appsolution.co.dmt.fragments.RecommendedFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageViewBackgroundMore"
        android:layout_width="0dp"
        android:layout_height="@dimen/more_img_height"
        android:background="@drawable/background_splash"
        android:contentDescription="@string/img_splashscreen"
        android:src="@drawable/background_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewIconMore"
        android:layout_width="0dp"
        android:layout_height="@dimen/more_icon_height"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/img_splashscreen"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackgroundMore" />

</android.support.constraint.ConstraintLayout>
